<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.russo_oppido_marzucco.sweng.smartgreenhouse.ManualControl"
    tools:showIn="@layout/activity_manual_control">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/bg_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
               android:layout_margin="10dp"
                android:src="@drawable/manualcontrol"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Manuale: "
                android:padding="5dp"
                android:textSize="18dp"/>
            <Switch
                android:id="@+id/manualSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="end"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/luceLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/luceImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/luce_off"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Luce: "
                android:padding="5dp"
                android:textSize="18dp"/>
            <Switch
                android:id="@+id/luceSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ventolaLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ventolaImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ventola_off"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Ventola: "
                android:padding="5dp"
                android:textSize="18dp"/>
            <Switch
                android:id="@+id/VentolaSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/irrigazioneLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/irrigazioneImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/irrigazione_off"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Irrigazione: "
                android:padding="5dp"
                android:textSize="18dp"/>
            <Switch
                android:id="@+id/irrigazioneSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/riscaldamentoLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/riscaldamentoImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/riscaldamento_off"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Aria calda: "
                android:padding="5dp"
                android:textSize="18dp"/>
            <Switch
                android:id="@+id/riscaldamentoSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="end"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
